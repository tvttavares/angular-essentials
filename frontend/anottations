-- angular command line interface (cli)
npm i -g @angular/cli

-- creating the project
ng new frontend --minimal
routes -> yes
css -> yes

-- initializing the application
npm start

-- angulas.json
"@schematics/angular:component": {
          "inlineTemplate": false,
          "inlineStyle": false,
          "skipTests": true

-- Installing angular material
ng add @angular/material
-> choose theme
-> global typology ? yes
-> animations ? yes

-- generating component
-- header
ng g c components/template/header

-- footer
ng g c components/template/footer

-- nav
ng g c components/template/nav

-- home 
ng g c view/home

-- product component
ng g c view/product-crud

-- create product component
ng g c components/product/product-create

-- creating product service
ng g s components/product/product

-- product read
ng g c components/product/product-read

-- creating table
ng generate @angular/material:table <component-name>
ng generate @angular/material:table components/product/product-read2

-- product update
ng g c components/product/product-update

-- product delete
ng g c components/product/product-delete